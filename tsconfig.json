{
  "compilerOptions": {
    "noImplicitAny": false,
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "declaration": false,
    "sourceMap": true,
    "baseUrl": "./src",
  },
  "include": ["src", "test"],
  "exclude": ["node_modules", "dist"]
}
